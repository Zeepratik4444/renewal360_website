# ============================================
# RENEWAL360 WEBSITE - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# --- Admin Panel ---
ADMIN_USERNAME = admin
ADMIN_PASSWORD = your_admin_password

# --- Database ---
db_engine = "postgresql+asyncpg"
db_username = your_db_user
db_password = your_db_password
rds_endpoint = your_db_host
db_port = 5432
db_name = renewalsDB

# --- Email (for notifications) ---
AppPassword = your_zoho_app_password
MailUserName = hello@yourdomain.com
MAIL_PORT = 465
MAIL_SERVER = smtp.zoho.in

# --- Renewal Copilot Integration ---
# LOCAL:      http://localhost:5000
# PRODUCTION: https://copilot.renewal360.in
RENEWAL_COPILOT_BASE_URL = https://copilot.renewal360.in
RENEWAL_COPILOT_API_URL = https://copilot.renewal360.in
